<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#FFFFFF"
    android:id="@+id/edit_layout"
    android:layout_height="fill_parent" >
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/music_score"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/music_score"
        android:src="@drawable/musicbd" />
    
    <ImageButton
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:src="@drawable/right_arrow" />
    
    <ImageButton
        android:id="@+id/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:src="@drawable/left_arrow" />
    
     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow_indicator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/music_score"
        android:src="@drawable/arrow" />

    <ImageButton 
        android:id="@+id/rewind_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/sharp_button"
        android:src="@drawable/rewind"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="160dp"
        android:layout_alignParentBottom="true" />
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clef_image"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bass_clef"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meter_text"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:textColor="#000000" />
    <ImageButton 
        android:id="@+id/play_pause_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/flat_button"
        android:layout_toRightOf="@id/rewind_button"
        android:src="@drawable/play"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true" />
    <ImageButton 
        android:id="@+id/forward_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/natural_button"
        android:layout_toRightOf="@id/play_pause_button"
        android:src="@drawable/forward"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true" />
    
</RelativeLayout>